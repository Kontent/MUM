<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>System - Force Password Change</name>
	<author>Kontent Design</author>
	<creationDate>Aoril 2011</creationDate>
	<copyright>(C) 2010 Kontent Design. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@kontendesign.com</authorEmail>
	<authorUrl>http://extensions.kontentdesign.com</authorUrl>
	<version>1.0</version>
	<description>This plugin will see if a user's lastvisitDate is 0000-00-00 00:00:01.  If so, the user will be forced to the edit profile page until they change their password.</description>
	<languages>
		<language tag="en-GB">en-GB.plg_system_forcepasswordchange.ini</language>
	</languages>
	<files>
		<filename plugin="forcepasswordchange">forcepasswordchange.php</filename>
		<filename>forcepasswordchange.xml</filename>
	</files>
	<administration>
		<languages>
			<language tag="en-GB">en-GB.plg_system_forcepasswordchange.ini</language>
		</languages>
	</administration>
</install>
